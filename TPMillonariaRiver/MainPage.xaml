<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TPMillonariaRiver.MainPage"
             BackgroundColor="Black"
             Title="Login">

    <Grid>
        <Image Source="logo.jpg"
               Aspect="AspectFill"
               Opacity="1"
               HorizontalOptions="Fill"
               VerticalOptions="Fill" />

        <BoxView BackgroundColor="#00000066"
                 HorizontalOptions="Fill"
                 VerticalOptions="Fill" />

        <VerticalStackLayout VerticalOptions="End" Padding="30" Spacing="15">

            <Frame BackgroundColor="#1E1E1EAA" CornerRadius="10" HasShadow="False" Padding="10">
                <Entry x:Name="txtUsuario"
                       Placeholder="USUARIO"
                       PlaceholderColor="White"
                       TextColor="White"
                       BackgroundColor="Transparent" />
            </Frame>

            <Frame BackgroundColor="#1E1E1EAA" CornerRadius="10" HasShadow="False" Padding="10">
                <Entry x:Name="txtPassword"
                       Placeholder="CONTRASEÃ‘A"
                       PlaceholderColor="White"
                       TextColor="White"
                       IsPassword="True"
                       BackgroundColor="Transparent" />
            </Frame>

            <Button Text="INGRESAR"
                    Clicked="BtnIngresar_Clicked"
                    BackgroundColor="#DDDDDD"
                    TextColor="Black"
                    HeightRequest="45"
                    CornerRadius="25"
                    FontAttributes="Bold"
                    Margin="0,10,0,20" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
